<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Surname</th>
      <th scope="col">Address</th>
      <th scope="col">Mobile number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.surname %></td>
        <td><%= account.address %></td>
        <td><%= account.mobile_number %></td>
        <td><%= link_to '<button type="button" class="btn btn-light">Show</button>'.html_safe, account %></td>
        <td><%= link_to '<button type="button" class="btn btn-danger">Edit</button>'.html_safe, edit_account_path(account) %></td>
      </tr>
    <%end%>
  </tbody>
</table>
<%= link_to '<button type="button" class="btn btn-success">New Account</button>'.html_safe, new_account_path %>
