<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<% if @accounts %>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Surname</th>
        <th scope="col">Address</th>
        <th scope="col">Mobile number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td><%= account.name %></td>
          <td><%= account.surname %></td>
          <td><%= account.address %></td>
          <td><%= account.mobile_number %></td>
          <% if params[:role] == "manager" && current_user.admin? %>
            <td><%= link_to '<button type="button" class="btn btn-dark">Edit</button>'.html_safe,edit_user_registration_path(:id => account.user_id) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
   <div>There are no accounts</div>
<% end %>

<% if params[:role] == "manager" %>
<%= link_to '<button type="button" class="btn btn-warning">New Manager</button>'.html_safe, new_user_registration_path %>
<% end %>
