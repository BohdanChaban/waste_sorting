<p id="notice"><%= notice %></p>

<h1>Request</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if current_user&.manager?  %>
    <% @initiated.each do |inquiry| %>
      <tr>
        <td><%= inquiry.status %></td>
        <td><%= link_to 'Approve', inquiry_path(id: inquiry.id, inquiry: { status: 'approved' }), method: :patch %></td>
        <td><%= link_to 'Cancel', inquiry_path(id: inquiry.id, inquiry: { status: 'cancelled' }), method: :patch %></td>
        <td><%= link_to 'Decline', inquiry_path(id: inquiry.id, inquiry: { status: 'declined' }), method: :patch %></td>
        <td><%= link_to 'Complete', inquiry_path(id: inquiry.id, inquiry: { status: 'completed' }), method: :patch %></td>
      </tr>
    <% end %>

    <% @approved.each do |inquiry| %>
      <tr>
        <td><%= inquiry.status %></td>
        <td><%= link_to 'Approve', inquiry_path(id: inquiry.id, inquiry: { status: 'approved' }), method: :patch %></td>
        <td><%= link_to 'Cancel', inquiry_path(id: inquiry.id, inquiry: { status: 'cancelled' }), method: :patch %></td>
        <td><%= link_to 'Decline', inquiry_path(id: inquiry.id, inquiry: { status: 'declined' }), method: :patch %></td>
        <td><%= link_to 'Complete', inquiry_path(id: inquiry.id, inquiry: { status: 'completed' }), method: :patch %></td>
      </tr>
    <% end %>

    <% @completed.each do |inquiry| %>
      <tr>
        <td><%= inquiry.status %></td>
        <td><%= link_to 'Approve', inquiry_path(id: inquiry.id, inquiry: { status: 'approved' }), method: :patch %></td>
        <td><%= link_to 'Cancel', inquiry_path(id: inquiry.id, inquiry: { status: 'cancelled' }), method: :patch %></td>
        <td><%= link_to 'Decline', inquiry_path(id: inquiry.id, inquiry: { status: 'declined' }), method: :patch %></td>
        <td><%= link_to 'Complete', inquiry_path(id: inquiry.id, inquiry: { status: 'completed' }), method: :patch %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

