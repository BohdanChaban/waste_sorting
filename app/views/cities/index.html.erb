<p id="notice"><%= notice %></p>

<h1>Cities</h1>
<div class="city-table-size">
  <table class="table">
    <thead>
      <tr>
        <th scope="col", class="city-text-size" >Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cities.each do |city| %>
        <tr>
          <td class="city-text-size"><%= city.name %></td>
          <td><%= link_to '<button type="button" class="btn btn-warning">Show</button>'.html_safe, city %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<% if current_user.admin? %> 
  <%= link_to '<button type="button" class="btn btn-warning">New City</button>'.html_safe, new_city_path %>
<% end %>
